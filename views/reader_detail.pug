extends layout

block content

  h1 Reader: #{reader.surname}
  p Number: #{reader.number}

  div(style='margin-left:20px;margin-top:20px')

    h5 Opinions

    dl
      each opinion in reader_opinions
        dt
          a(href=opinion.book.url) #{opinion.book.title}
        dd #[em  #{opinion.comments}]

      else
        p This reader has no opinions.
  
  hr
  p
    a(href=reader.url+'/delete') Delete reader
  p
    a(href=reader.url+'/update') Update reader
